---
import { Icon } from "astro-icon/components";

interface Props{
  text : string
}

const { text } = Astro.props
---
<div class=" flex flex-col justify-center items-center gap-2 -translate-y-2/3 px-4 md:px-0">
  <a href="https://wa.me/573205697245?text=Hola%20estoy%20interesado%20en%20sus%20servicios" target="_blank" rel="noopener noreferrer" class="text-white-700 uppercase text-xl md:text-2xl font-semibold flex gap-2"> Contactanos <Icon name="whatsapp" class="text-3xl" /> </a>
  <button class="bg-yellow-primary-700 px-6 py-2 rounded-xl max-w-md text-white-700 text-lg md:text-xl font-semibold text-center" > <span> { text } </span> </>
</div>