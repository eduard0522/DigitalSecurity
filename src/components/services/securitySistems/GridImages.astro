---
import CameraImage1 from '../../../assets/camera-mtto-1.jpg?url'
import CameraImage2 from '../../../assets/camera-mtto-2.jpg?url'
import CameraImage3 from '../../../assets/camera-mtto-3.jpg?url'
---

<div class="xl:col-start-1 xl:col-end-8 flex gap-4 xl:gap-12">
   <div class='xl:w-7/12'>
      <img
        src={CameraImage3}
        alt='Imagen de una camara de videovigilancia'
        class='rounded-xl invisible hidden md:visible md:block w-full' 
      />
    </div>

    <div
      class='flex xl:flex-col items-center justify-between gap-2 md:invisible md:hidden xl:visible xl:flex xl:gap-12 xl:w-4/12'
    >
      <img
        src={CameraImage1}
        alt='Imagen de una camara de videovigilancia'
        class='rounded-xl w-[47%] xl:w-full'
      />
      <img
        src={CameraImage2}
        alt='Imagen de una camara de videovigilancia'
        class='rounded-xl w-[47%] xl:w-full'
      />
    </div>
</div>