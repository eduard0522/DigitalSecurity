---
import Title from "./Title.astro";
import Parragraph from "./Parragraph.astro";
import CameraTopHero from "../../assets/camera-top-hero.svg?url";
import Arrows from "./Arrows.astro";
---
<section class="w-full min-h-screen relative -translate-y-18">
  <div class="hero-bg absolute inset-0 bg-cover"></div>
  <div class="absolute inset-0 bg-black/40 flex flex-col items-center justify-center md:justify-between gap-12 md:gap-24">
    <Title />
    <Parragraph />
    <Arrows />
  </div>
  <div class="w-20 md:w-40 absolute top-20 right-0 z-20">
    <img src={CameraTopHero} alt="Icono de una camara de videovigilancia">
  </div>
</section>
<style>

  .hero-bg {
    background-image: url("../../assets/bg_header_movil.jpg");
  }
@media screen and (min-width: 580px) {
  .hero-bg {
    background-image: url("../../assets/bg_header.jpg");
  }
}

</style>