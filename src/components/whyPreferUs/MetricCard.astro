---
interface Metric {
  number: string
  text: string
}

interface Props {
  metric: Metric
}

const { metric } = Astro.props
---

<div class='border-r-1 md:border-r-2 border-zinc-300 text-center last:border-0'>
  <h3
    class='text-xl md:text-5xl text-zinc-300 text-center flex justify-center items-center'
  >
    <span class='text-xl md:text-3xl'>+</span>{metric.number}
  </h3>
  <p class='text-sm md:text-xl text-zinc-300 text-center capitalize'>
    {metric.text}
  </p>
</div>
