---
import { Icon } from "astro-icon/components"

interface Feature{
   icon: string
    title: string
    content: string
}


interface Props{
  feature : Feature
}

const { feature } = Astro.props

---

<div
  class='bg-white-700/9 rounded-xl p-4 px-8 h-72 w-[250px] max-w-[250px] gap-2 flex flex-col justify-evenly items-center'
>
  <Icon name={feature.icon} class='text-5xl text-center text-white-700' />
  <h3 class='text-xl text-white-700 capitalize font-semibold mb-2'>
    {feature.title}
  </h3>
  <div class='w-full h-0.5 text-white-700 bg-zinc-200 rounded-sm'></div>
  <p class='text-base first-letter:capitalize text-white-700'>
    {feature.content}
  </p>
</div>
